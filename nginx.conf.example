# Nginx configuration for Ticketer application
# For Infomaniak Public Cloud deployment with reverse proxy
#
# Installation instructions:
# 1. Copy this file to /etc/nginx/sites-available/ticketer
# 2. Update 'yourdomain.com' with your actual domain
# 3. Create symbolic link: sudo ln -s /etc/nginx/sites-available/ticketer /etc/nginx/sites-enabled/
# 4. Test configuration: sudo nginx -t
# 5. Reload nginx: sudo systemctl reload nginx
# 6. For SSL/HTTPS, use certbot or Infomaniak's SSL certificate

server {
    listen 80;
    listen [::]:80;
    server_name yourdomain.com www.yourdomain.com;

    # Redirect HTTP to HTTPS (uncomment after setting up SSL)
    # return 301 https://$server_name$request_uri;

    # For initial setup without SSL, use the proxy configuration below
    # Comment out the return statement above and uncomment the location block

    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # WebSocket support (if needed in future)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Disable buffering for faster response
        proxy_buffering off;
        proxy_cache_bypass $http_upgrade;
    }

    # Health check endpoint with reduced logging
    location /api/health {
        proxy_pass http://localhost:3000;
        access_log off;
    }

    # Static assets caching
    location /_next/static/ {
        proxy_pass http://localhost:3000;
        proxy_cache_valid 200 1y;
        add_header Cache-Control "public, immutable";
    }

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logs
    access_log /var/log/nginx/ticketer_access.log;
    error_log /var/log/nginx/ticketer_error.log;
}

